@using Do_an_NoSQL.Helpers
@using System.Security.Claims
@inject Do_an_NoSQL.Database.MongoDbContext DbContext

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Quản lý Prudential</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/css/select2.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/module-common.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Do_an_NoSQL.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

    @functions {
        bool IsActive(string controller, string action = null)
        {
            var routeController = ViewContext.RouteData.Values["controller"]?.ToString();
            var routeAction = ViewContext.RouteData.Values["action"]?.ToString();

            if (action == null)
                return controller == routeController;

            return controller == routeController && action == routeAction;
        }
    }
</head>
<body>
    @using Do_an_NoSQL.Helpers
    @using System.Security.Claims

    <!-- Header -->
    <header class="admin-header">
        <div class="admin-logo">
            <img src="~/images/logo.png" class="admin-logo-icon-img" alt="Logo" />
            <span class="admin-logo-text">Prudential</span>
        </div>
        <div class="admin-header-right">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <div class="admin-user-dropdown">
                    <div class="admin-user" id="userDropdownBtn">
                        <div class="admin-user-avatar">
                            @{
                                var fullName = User.FindFirst("FullName")?.Value ?? User.Identity.Name ?? "User";
                                var initials = string.Join("", fullName.Split(' ').Select(s => s.FirstOrDefault())).ToUpper();
                                if (initials.Length > 2) initials = initials.Substring(0, 2);
                            }
                            @initials
                        </div>
                        <div class="admin-user-info">
                            <span class="admin-user-name">@(User.FindFirst("FullName")?.Value ?? User.Identity.Name)</span>
                            <span class="admin-user-role">@(User.FindFirst("RoleName")?.Value ?? "User")</span>
                        </div>
                        <i class="fas fa-chevron-down admin-user-arrow"></i>
                    </div>
                    <div class="dropdown-menu-custom">
                        <div class="dropdown-header">
                            <div class="dropdown-header-name">@(User.FindFirst("FullName")?.Value ?? User.Identity.Name)</div>
                            <div class="dropdown-header-email">@(User.FindFirst(ClaimTypes.Email)?.Value ?? "N/A")</div>
                        </div>
                        <a href="/settings">
                            <i class="fas fa-cog"></i>
                            <span>Cài đặt</span>
                        </a>
                        <div class="dropdown-divider"></div>
                        <form method="post" asp-action="Logout" asp-controller="Auth" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="dropdown-menu-button text-danger">
                                <i class="fas fa-sign-out-alt"></i>
                                <span>Đăng xuất</span>
                            </button>
                        </form>
                    </div>
                </div>
            }
            else
            {
                <a href="/auth/login" class="btn btn-outline-light">
                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                </a>
            }
        </div>
    </header>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <!-- Main Container -->
    <div class="admin-container">
        <!-- Sidebar -->
        <aside class="admin-sidebar" id="adminSidebar">
            <nav>
                <ul class="sidebar-menu">
                    <!-- Tổng quan - Tất cả user -->
                    <li>
                        <a href="/" class="sidebar-menu-link @(IsActive("Home", "Index") ? "active" : "")">
                            <span class="sidebar-menu-icon"><i class="fas fa-chart-line"></i></span>
                            <span>Tổng quan</span>
                        </a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewCustomer(User, DbContext))
                    {
                        <li>
                            <a href="/customers" class="sidebar-menu-link @(IsActive("Customers") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-users"></i></span>
                                <span>Quản lý khách hàng</span>
                            </a>
                        </li>
                    }

                    @* ✅ YÊU CẦU BẢO HIỂM - ADMIN, ADVISOR, UNDERWRITER, CSKH *@
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewApplication(User, DbContext))
                    {
                        <li>
                            <a href="/PolicyApplications" class="sidebar-menu-link @(IsActive("PolicyApplications") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-file-signature"></i></span>
                                <span>Quản lý yêu cầu bảo hiểm</span>
                            </a>
                        </li>
                    }

                    @* ✅ HỢP ĐỒNG - ADMIN, ADVISOR, UNDERWRITER, ACCOUNTANT, CSKH *@
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewPolicy(User, DbContext))
                    {
                        <li>
                            <a href="/Policies" class="sidebar-menu-link @(IsActive("Policies") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-file-alt"></i></span>
                                <span>Quản lý hợp đồng</span>
                            </a>
                        </li>
                    }

                    @* ✅ SẢN PHẨM - ADMIN, ADVISOR, UNDERWRITER, ACCOUNTANT, CSKH *@
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewProducts(User))
                    {
                        <li>
                            <a href="/products" class="sidebar-menu-link @(IsActive("Products") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-shield-alt"></i></span>
                                <span>Danh sách bảo hiểm</span>
                            </a>
                        </li>
                    }

                    @* ✅ BỒI THƯỜNG - ADMIN, UNDERWRITER, CSKH, ACCOUNTANT *@
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewClaim(User, DbContext))
                    {
                        <li>
                            <a href="/claims" class="sidebar-menu-link @(IsActive("Claims") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-coins"></i></span>
                                <span>Yêu cầu bồi thường</span>
                            </a>
                        </li>
                    }

                    @* ✅ THANH TOÁN - ADMIN, ADVISOR, ACCOUNTANT, CSKH *@
                    @if (User.Identity?.IsAuthenticated == true &&
                                        RoleHelper.CanViewPayment(User))
                    {
                        <li>
                            <a href="/payments" class="sidebar-menu-link @(IsActive("Payments") ? "active" : "")">
                                <span class="sidebar-menu-icon"><i class="fas fa-credit-card"></i></span>
                                <span>Thanh toán</span>
                            </a>
                        </li>
                    }

                    
                
                </ul>

                @if (User.Identity?.IsAuthenticated == true && RoleHelper.HasRole(User, RoleHelper.ADMIN))
                {
                    <div class="sidebar-section">
                        <h4 class="sidebar-section-title">Cài đặt hệ thống</h4>
                        <ul class="sidebar-menu">
                            <li>
                                <a href="/users" class="sidebar-menu-link @(IsActive("Users") ? "active" : "")">
                                    <span class="sidebar-menu-icon"><i class="fas fa-cog"></i></span>
                                    <span>Quản lý người dùng</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </nav>
        </aside>

        <!-- Content Area -->
        <main class="admin-content">
            @RenderBody()
        </main>
    </div>

    <!-- Mobile Toggle Button -->
    <button class="sidebar-toggle" id="sidebarToggle">
        <i class="fas fa-bars"></i>
    </button>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.1.0-rc.0/js/select2.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/module-common.js"></script>
    <script src="~/js/site.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // User Dropdown
            const userDropdown = document.querySelector('.admin-user-dropdown');
            const userDropdownBtn = document.getElementById('userDropdownBtn');

            if (userDropdownBtn) {
                userDropdownBtn.addEventListener('click', function(e) {
                    e.stopPropagation();
                    userDropdown.classList.toggle('active');
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', function(e) {
                    if (!userDropdown.contains(e.target)) {
                        userDropdown.classList.remove('active');
                    }
                });
            }

            // Sidebar Toggle for Mobile
            const sidebar = document.getElementById('adminSidebar');
            const toggleBtn = document.getElementById('sidebarToggle');
            const overlay = document.getElementById('sidebarOverlay');

            if (toggleBtn) {
                toggleBtn.addEventListener('click', function() {
                    sidebar.classList.toggle('active');
                    overlay.classList.toggle('active');
                });

                overlay.addEventListener('click', function() {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                });
            }
        });
    </script>
    @Html.AntiForgeryToken()
</body>
</html>