@model Do_an_NoSQL.Models.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm bảo hiểm";
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: #003366;
    }

    .header-actions {
        display: flex;
        gap: 12px;
    }

    .btn-back {
        background: #f5f7fa;
        color: #666;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 13px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-back:hover {
            background: #e0e0e0;
            color: #666;
        }

    .btn-edit {
        background: #fef3c7;
        color: #92400e;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 13px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-edit:hover {
            background: #fde68a;
            color: #92400e;
        }

    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 24px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: #003366;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #f0f0f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 24px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 12px;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
        font-weight: 600;
    }

    .info-value {
        font-size: 15px;
        color: #003366;
        font-weight: 500;
        word-break: break-word;
    }

    .purpose-list {
        display: flex;
        gap: 8px;
        flex-wrap: wrap;
    }

    .purpose-badge {
        padding: 6px 14px;
        border-radius: 16px;
        font-size: 12px;
        font-weight: 600;
        background: #e0e7ff;
        color: #3730a3;
    }

    .riders-list {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .rider-item {
        padding: 12px;
        background: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .rider-code {
        font-weight: 600;
        color: #003366;
    }

    .rider-name {
        color: #666;
    }

    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }

        .header-actions {
            flex-direction: column;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">👁️ Chi tiết sản phẩm bảo hiểm</h1>
    <div class="header-actions">
        <a href="/Products/Edit/@Model?.Id" class="btn-edit">
            <span>✏️</span>
            <span>Chỉnh sửa</span>
        </a>
        <a href="/Products/Index" class="btn-back">
            <span>←</span>
            <span>Quay lại</span>
        </a>
    </div>
</div>

<div class="detail-card">
    <h3 class="section-title">Thông tin cơ bản</h3>
    <div class="info-grid">
        <div class="info-item">
            <span class="info-label">Mã sản phẩm</span>
            <span class="info-value">@Model?.ProductCode</span>
        </div>
        <div class="info-item">
            <span class="info-label">Tên sản phẩm</span>
            <span class="info-value">@Model?.Name</span>
        </div>
        <div class="info-item">
            <span class="info-label">Loại hình bảo hiểm</span>
            <span class="info-value">@Model?.Type</span>
        </div>
        <div class="info-item">
            <span class="info-label">Kỳ hạn hợp đồng</span>
            <span class="info-value">@Model?.TermYears năm</span>
        </div>
        <div class="info-item" style="grid-column: 1 / -1;">
            <span class="info-label">Mục đích</span>
            <div class="purpose-list">
                @if (Model?.Purpose != null)
                {
                    @foreach (var purpose in Model.Purpose)
                    {
                        <span class="purpose-badge">@purpose</span>
                    }
                }
            </div>
        </div>
    </div>

    <h3 class="section-title">Điều kiện tham gia</h3>
    <div class="info-grid">
        <div class="info-item">
            <span class="info-label">Độ tuổi tối thiểu</span>
            <span class="info-value">@Model?.MinAge tuổi</span>
        </div>
        <div class="info-item">
            <span class="info-label">Độ tuổi tối đa</span>
            <span class="info-value">@Model?.MaxAge tuổi</span>
        </div>
        <div class="info-item">
            <span class="info-label">Số tiền bảo hiểm tối thiểu</span>
            <span class="info-value">@Model?.MinSumAssured.ToString("N0") VNĐ</span>
        </div>
        <div class="info-item">
            <span class="info-label">Số tiền bảo hiểm tối đa</span>
            <span class="info-value">@Model?.MaxSumAssured.ToString("N0") VNĐ</span>
        </div>
    </div>

    <h3 class="section-title">Quyền lợi bổ sung (Riders)</h3>
    @if (Model?.Riders != null && Model.Riders.Any())
    {
        <ul class="riders-list">
            @foreach (var rider in Model.Riders)
            {
                <li class="rider-item">
                    <span class="rider-code">@rider.Code</span>
                    <span class="rider-name">@rider.Name</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p style="color: #999; font-style: italic;">Không có quyền lợi bổ sung</p>
    }

    <h3 class="section-title">Thông tin khác</h3>
    <div class="info-item">
        <span class="info-label">Ngày tạo</span>
        <span class="info-value">@Model?.CreatedAt.ToString("dd/MM/yyyy HH:mm")</span>
    </div>
</div>