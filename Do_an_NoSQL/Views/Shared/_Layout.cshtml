    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: #f5f7fa;
            overflow-x: hidden;
        }

        /* Admin Header */
        .admin-header {
            background: #fff;
            height: 70px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
        }

        .admin-logo {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .admin-logo-icon {
            font-size: 28px;
            font-weight: 700;
            color: #E31E24;
        }

        .admin-logo-text {
            font-size: 18px;
            font-weight: 600;
            color: #003366;
        }

        .admin-header-right {
            display: flex;
            align-items: center;
            gap: 20px;
        }

        .admin-user {
            display: flex;
            align-items: center;
            gap: 12px;
            cursor: pointer;
            padding: 8px 16px;
            border-radius: 8px;
            transition: background 0.3s ease;
        }

            .admin-user:hover {
                background: #f5f7fa;
            }

        .admin-user-avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-weight: 600;
        }

        .admin-user-info {
            display: flex;
            flex-direction: column;
        }

        .admin-user-name {
            font-weight: 600;
            color: #003366;
            font-size: 14px;
        }

        .admin-user-role {
            font-size: 12px;
            color: #666;
        }

        /* Main Layout Container */
        .admin-container {
            display: flex;
            margin-top: 70px;
            min-height: calc(100vh - 70px);
        }

        /* Sidebar Functions (1/4 width - BÊN TRÁI) */
        .admin-sidebar {
            width: 320px;
            min-width: 320px;
            background: #fff;
            box-shadow: 2px 0 8px rgba(0, 0, 0, 0.05);
            padding: 30px 20px;
            overflow-y: auto;
            position: sticky;
            top: 70px;
            height: calc(100vh - 70px);
        }

        /* Content Area (3/4 width - BÊN PHẢI) */
        .admin-content {
            flex: 1;
            padding: 30px;
            overflow-y: auto;
            background: #f5f7fa;
        }

        .sidebar-title {
            font-size: 18px;
            font-weight: 700;
            color: #003366;
            margin-bottom: 20px;
            padding-bottom: 15px;
            border-bottom: 2px solid #f0f0f0;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        .sidebar-menu-item {
        }

        .sidebar-menu-link {
            display: flex;
            align-items: center;
            gap: 12px;
            padding: 14px 16px;
            color: #666;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            font-size: 14px;
            font-weight: 500;
        }

            .sidebar-menu-link:hover {
                background: #f5f7fa;
                color: #E31E24;
                transform: translateX(5px);
            }

            .sidebar-menu-link.active {
                background: linear-gradient(135deg, #E31E24 0%, #c4161c 100%);
                color: white;
            }

        .sidebar-menu-icon {
            font-size: 20px;
            width: 24px;
            text-align: center;
        }

        .sidebar-section {
            margin-top: 30px;
            padding-top: 20px;
            border-top: 1px solid #f0f0f0;
        }

        .sidebar-section-title {
            font-size: 12px;
            font-weight: 700;
            color: #999;
            text-transform: uppercase;
            margin-bottom: 15px;
            letter-spacing: 0.5px;
        }

        /* Stats Cards */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #fff;
            padding: 24px;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
            }

        .stat-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 16px;
        }

        .stat-card-title {
            font-size: 14px;
            color: #666;
            font-weight: 500;
        }

        .stat-card-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }

        .stat-card-value {
            font-size: 32px;
            font-weight: 700;
            color: #003366;
            margin-bottom: 8px;
        }

        .stat-card-change {
            font-size: 13px;
            display: flex;
            align-items: center;
            gap: 4px;
        }

            .stat-card-change.positive {
                color: #10b981;
            }

            .stat-card-change.negative {
                color: #ef4444;
            }

        /* Content Card */
        .content-card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            padding: 24px;
            margin-bottom: 24px;
        }

        .content-card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            padding-bottom: 16px;
            border-bottom: 1px solid #f0f0f0;
        }

        .content-card-title {
            font-size: 20px;
            font-weight: 700;
            color: #003366;
        }

        /* Responsive */
        @@media (max-width: 992px) {
            .admin-sidebar {
                position: fixed;
                left: -320px;
                top: 70px;
                transition: left 0.3s ease;
                z-index: 999;
            }

                .admin-sidebar.active {
                    left: 0;
                }

            .admin-content {
                width: 100%;
            }
        }

        @@media (max-width: 576px) {
            .admin-header {
                padding: 0 15px;
            }

            .admin-content {
                padding: 15px;
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
<body>
