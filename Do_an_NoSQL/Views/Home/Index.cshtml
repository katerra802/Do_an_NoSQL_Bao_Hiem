<style>
    /* Dashboard Header */
    .dashboard-header {
        margin-bottom: 30px;
    }

    .dashboard-title {
        font-size: 28px;
        font-weight: 700;
        color: #003366;
        margin-bottom: 8px;
    }

    .dashboard-subtitle {
        color: #666;
        font-size: 14px;
    }

    .dashboard-date {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #E31E24;
        font-weight: 600;
        margin-top: 12px;
    }

    /* Quick Actions Buttons */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 30px;
    }

    .quick-action-btn {
        background: linear-gradient(135deg, #E31E24 0%, #c4161c 100%);
        color: white;
        padding: 16px 20px;
        border-radius: 10px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        cursor: pointer;
    }

        .quick-action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(227, 30, 36, 0.3);
            color: white;
        }

    .quick-action-icon {
        font-size: 24px;
    }

    /* Activity Feed */
    .activity-feed {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        padding: 24px;
        margin-bottom: 24px;
    }

    .activity-item {
        display: flex;
        gap: 16px;
        padding: 16px;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.3s ease;
    }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-item:hover {
            background: #f8f9fa;
        }

    .activity-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        flex-shrink: 0;
    }

        .activity-icon.new {
            background: #d1fae5;
        }

        .activity-icon.pending {
            background: #fef3c7;
        }

        .activity-icon.completed {
            background: #dbeafe;
        }

    .activity-details {
        flex: 1;
    }

    .activity-title {
        font-weight: 600;
        color: #003366;
        margin-bottom: 4px;
    }

    .activity-desc {
        font-size: 14px;
        color: #666;
        margin-bottom: 4px;
    }

    .activity-time {
        font-size: 12px;
        color: #999;
    }

    .activity-amount {
        font-weight: 700;
        color: #E31E24;
        font-size: 18px;
    }

    /* Table Styles */
    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table thead {
            background: #f8f9fa;
        }

        .data-table th {
            padding: 14px;
            text-align: left;
            font-weight: 600;
            color: #003366;
            font-size: 13px;
            text-transform: uppercase;
            border-bottom: 2px solid #e0e0e0;
        }

        .data-table td {
            padding: 14px;
            border-bottom: 1px solid #f0f0f0;
            color: #333;
            font-size: 14px;
        }

        .data-table tbody tr:hover {
            background: #f8f9fa;
        }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

        .status-badge.active {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.completed {
            background: #dbeafe;
            color: #1e40af;
        }

    /* Chart Placeholder */
    .chart-container {
        height: 300px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 18px;
        font-weight: 600;
    }
</style>

