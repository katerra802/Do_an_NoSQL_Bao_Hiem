@model Do_an_NoSQL.Models.PremiumPayment

@{
    ViewData["Title"] = "Chi tiết thanh toán phí";
    var isPaid = Model?.PaidDate != null;
}

<style>
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 24px;
    }

    .page-title {
        font-size: 24px;
        font-weight: 700;
        color: #003366;
    }

    .btn-back {
        background: #f5f7fa;
        color: #666;
        padding: 10px 18px;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 13px;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

        .btn-back:hover {
            background: #e0e0e0;
            color: #666;
        }

    .detail-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        padding: 30px;
        margin-bottom: 24px;
    }

    .section-title {
        font-size: 18px;
        font-weight: 700;
        color: #003366;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #f0f0f0;
    }

    .info-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 24px;
    }

    .info-item {
        display: flex;
        flex-direction: column;
    }

    .info-label {
        font-size: 12px;
        color: #999;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 6px;
        font-weight: 600;
    }

    .info-value {
        font-size: 15px;
        color: #003366;
        font-weight: 500;
    }

    .status-badge {
        padding: 6px 14px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

        .status-badge.paid {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.pending {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.overdue {
            background: #fee2e2;
            color: #991b1b;
        }

    .form-group {
        margin-bottom: 16px;
    }

        .form-group label {
            font-weight: 600;
            color: #003366;
            margin-bottom: 8px;
            font-size: 14px;
            display: block;
        }

    .form-control {
        width: 100%;
        padding: 12px;
        border: 1px solid #e0e0e0;
        border-radius: 6px;
        font-size: 14px;
    }

        .form-control:focus {
            outline: none;
            border-color: #E31E24;
        }

    .form-actions {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        margin-top: 24px;
        padding-top: 20px;
        border-top: 1px solid #f0f0f0;
    }

    .btn-primary {
        background: linear-gradient(135deg, #E31E24 0%, #c4161c 100%);
        color: white;
        padding: 12px 32px;
        border-radius: 6px;
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(227, 30, 36, 0.3);
        }

    .btn-secondary {
        background: #f5f7fa;
        color: #666;
        padding: 12px 32px;
        border-radius: 6px;
        border: none;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
    }

    @@media (max-width: 768px) {
        .info-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="page-header">
    <h1 class="page-title">👁️ Chi tiết thanh toán phí</h1>
    <a href="/Payments/Index" class="btn-back">
        <span>←</span>
        <span>Quay lại</span>
    </a>
</div>

<div class="detail-card">
    <h3 class="section-title">Thông tin thanh toán</h3>
    <div class="info-grid">
        <div class="info-item">
            <span class="info-label">Mã hợp đồng</span>
            <span class="info-value">@Model?.PolicyNo</span>
        </div>
        <div class="info-item">
            <span class="info-label">Số tiền</span>
            <span class="info-value">@Model?.Amount.ToString("N0") VNĐ</span>
        </div>
        <div class="info-item">
            <span class="info-label">Ngày đến hạn</span>
            <span class="info-value">@Model?.DueDate.ToString("dd/MM/yyyy")</span>
        </div>
        <div class="info-item">
            <span class="info-label">Ngày thanh toán</span>
            <span class="info-value">@(Model?.PaidDate?.ToString("dd/MM/yyyy HH:mm") ?? "-")</span>
        </div>
        <div class="info-item">
            <span class="info-label">Kênh thanh toán</span>
            <span class="info-value">@(string.IsNullOrEmpty(Model?.Channel) ? "-" : Model.Channel)</span>
        </div>
        <div class="info-item">
            <span class="info-label">Mã tham chiếu</span>
            <span class="info-value">@(string.IsNullOrEmpty(Model?.Reference) ? "-" : Model.Reference)</span>
        </div>
        <div class="info-item" style="grid-column: 1 / -1;">
            <span class="info-label">Trạng thái</span>
            <span class="info-value">
                @if (Model?.Status == "Paid")
                {
                    <span class="status-badge paid">Đã thanh toán</span>
                }
                else if (Model?.Status == "Pending")
                {
                    <span class="status-badge pending">Chờ thanh toán</span>
                }
                else
                {
                    <span class="status-badge overdue">Quá hạn</span>
                }
            </span>
        </div>
    </div>
</div>

@if (!isPaid)
{
    <div class="detail-card">
        <h3 class="section-title">Cập nhật trạng thái thanh toán</h3>
        <form asp-action="UpdatePremiumStatus" method="post">
            <input type="hidden" name="id" value="@Model?.Id" />
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label>Trạng thái <span style="color: #E31E24;">*</span></label>
                <select name="status" class="form-control" required>
                    <option value="">Chọn trạng thái</option>
                    <option value="Paid" selected>Đã thanh toán (Paid)</option>
                    <option value="Pending">Chờ thanh toán (Pending)</option>
                    <option value="Overdue">Quá hạn (Overdue)</option>
                </select>
            </div>

            <div class="form-group">
                <label>Kênh thanh toán <span style="color: #E31E24;">*</span></label>
                <select name="channel" class="form-control" required>
                    <option value="">Chọn kênh</option>
                    <option value="Chuyển khoản">Chuyển khoản</option>
                    <option value="Tiền mặt">Tiền mặt</option>
                    <option value="Thẻ tín dụng">Thẻ tín dụng</option>
                    <option value="Ví điện tử">Ví điện tử</option>
                    <option value="Cổng thanh toán">Cổng thanh toán</option>
                </select>
            </div>

            <div class="form-group">
                <label>Mã tham chiếu / Số giao dịch</label>
                <input type="text" name="reference" class="form-control" placeholder="Nhập mã tham chiếu (nếu có)" />
                <small style="color: #999; font-size: 12px; margin-top: 4px; display: block;">
                    Ví dụ: Mã giao dịch ngân hàng, số biên lai, v.v.
                </small>
            </div>

            <div class="form-actions">
                <button type="button" class="btn-secondary" onclick="window.location.href='/Payments/Index'">Hủy</button>
                <button type="submit" class="btn-primary">💾 Cập nhật</button>
            </div>
        </form>
    </div>
}