@model Do_an_NoSQL.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard - Tổng quan";
}

<style>
    /* Dashboard Header */
    .dashboard-header {
        margin-bottom: 30px;
    }

    .dashboard-title {
        font-size: 28px;
        font-weight: 700;
        color: #003366;
        margin-bottom: 8px;
    }

    .dashboard-subtitle {
        color: #666;
        font-size: 14px;
    }

    .dashboard-date {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #E31E24;
        font-weight: 600;
        margin-top: 12px;
    }

    /* Quick Actions Buttons */
    .quick-actions {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 16px;
        margin-bottom: 30px;
    }

    .quick-action-btn {
        background: linear-gradient(135deg, #E31E24 0%, #c4161c 100%);
        color: white;
        padding: 16px 20px;
        border-radius: 10px;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: none;
        cursor: pointer;
    }

        .quick-action-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(227, 30, 36, 0.3);
            color: white;
        }

    .quick-action-icon {
        font-size: 24px;
    }

    /* Activity Feed */
    .activity-feed {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        padding: 24px;
        margin-bottom: 24px;
    }

    .activity-item {
        display: flex;
        gap: 16px;
        padding: 16px;
        border-bottom: 1px solid #f0f0f0;
        transition: background 0.3s ease;
    }

        .activity-item:last-child {
            border-bottom: none;
        }

        .activity-item:hover {
            background: #f8f9fa;
        }

    .activity-icon {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        flex-shrink: 0;
    }

        .activity-icon.new {
            background: #d1fae5;
        }

        .activity-icon.pending {
            background: #fef3c7;
        }

        .activity-icon.completed {
            background: #dbeafe;
        }

    .activity-details {
        flex: 1;
    }

    .activity-title {
        font-weight: 600;
        color: #003366;
        margin-bottom: 4px;
    }

    .activity-desc {
        font-size: 14px;
        color: #666;
        margin-bottom: 4px;
    }

    .activity-time {
        font-size: 12px;
        color: #999;
    }

    .activity-amount {
        font-weight: 700;
        color: #E31E24;
        font-size: 18px;
    }

    /* Table Styles */
    .data-table {
        width: 100%;
        border-collapse: collapse;
    }

        .data-table thead {
            background: #f8f9fa;
        }

        .data-table th {
            padding: 14px;
            text-align: left;
            font-weight: 600;
            color: #003366;
            font-size: 13px;
            text-transform: uppercase;
            border-bottom: 2px solid #e0e0e0;
        }

        .data-table td {
            padding: 14px;
            border-bottom: 1px solid #f0f0f0;
            color: #333;
            font-size: 14px;
        }

        .data-table tbody tr:hover {
            background: #f8f9fa;
        }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

        .status-badge.active, .status-badge.paid {
            background: #d1fae5;
            color: #065f46;
        }

        .status-badge.pending, .status-badge.submitted {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.inforce {
            background: #dbeafe;
            color: #1e40af;
        }

        .status-badge.grace {
            background: #fef3c7;
            color: #92400e;
        }

        .status-badge.expired, .status-badge.rejected {
            background: #fee2e2;
            color: #991b1b;
        }

    /* Chart Container */
    .chart-container {
        height: 300px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 18px;
        font-weight: 600;
        position: relative;
        overflow: hidden;
    }

    .chart-container::before {
        content: '';
        position: absolute;
        top: -50%;
        left: -50%;
        width: 200%;
        height: 200%;
        background: linear-gradient(45deg, transparent, rgba(255,255,255,0.1), transparent);
        transform: rotate(45deg);
        animation: shine 3s infinite;
    }


    .chart-content {
        position: relative;
        z-index: 1;
        text-align: center;
        padding: 40px;
    }

    .chart-icon {
        font-size: 64px;
        margin-bottom: 20px;
        animation: float 3s ease-in-out infinite;
        filter: drop-shadow(0 4px 8px rgba(0,0,0,0.2));
    }

    .chart-main-value {
        font-size: 32px;
        font-weight: 700;
        margin-bottom: 8px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.2);
    }

    .chart-label {
        font-size: 16px;
        opacity: 0.95;
        font-weight: 500;
        margin-bottom: 12px;
    }

    .chart-sub-info {
        font-size: 14px;
        opacity: 0.85;
        background: rgba(255,255,255,0.15);
        padding: 8px 16px;
        border-radius: 20px;
        display: inline-block;
        backdrop-filter: blur(10px);
    }

    .payment-chart {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .application-chart {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    .stats-grid .content-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .stats-grid .content-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.15);
    }
</style>

<!-- Dashboard Header -->
<div class="dashboard-header">
    <h1 class="dashboard-title">📊 Tổng quan hệ thống</h1>
    <p class="dashboard-subtitle">Chào mừng bạn quay trở lại! Dưới đây là thống kê hôm nay.</p>
    <div class="dashboard-date">
        <span>📅</span>
        <span id="currentDate"></span>
    </div>
</div>

<!-- Stats Cards -->
<div class="stats-grid">
    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-card-title">Hợp đồng mới</span>
            <div class="stat-card-icon" style="background: #dbeafe; color: #1e40af;">
                📄
            </div>
        </div>
        <div class="stat-card-value">@Model.NewPoliciesToday</div>
        <div class="stat-card-change positive">
            Tổng: @Model.TotalPolicies hợp đồng
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-card-title">Tổng giá trị hợp đồng</span>
            <div class="stat-card-icon" style="background: #d1fae5; color: #065f46;">
                💰
            </div>
        </div>
        <div class="stat-card-value">@Model.TotalValue.ToString("N0") VNĐ</div>
        <div class="stat-card-change positive">
            Tổng tích lũy
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-card-title">Khách hàng</span>
            <div class="stat-card-icon" style="background: #fef3c7; color: #92400e;">
                👥
            </div>
        </div>
        <div class="stat-card-value">@Model.TotalCustomers</div>
        <div class="stat-card-change positive">
            Tổng khách hàng
        </div>
    </div>

    <div class="stat-card">
        <div class="stat-card-header">
            <span class="stat-card-title">Yêu cầu chờ xử lý</span>
            <div class="stat-card-icon" style="background: #fee2e2; color: #991b1b;">
                ⏰
            </div>
        </div>
        <div class="stat-card-value">@Model.PendingApplications</div>
        <div class="stat-card-change negative">
            Hồ sơ đang thẩm định
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="content-card">
    <div class="content-card-header">
        <h2 class="content-card-title">⚡ Thao tác nhanh</h2>
    </div>
    <div class="quick-actions">
        <a href="/Customers" class="quick-action-btn">
            <span class="quick-action-icon">➕</span>
            <span>Thêm khách hàng</span>
        </a>
        <a href="/PolicyApplications" class="quick-action-btn">
            <span class="quick-action-icon">📝</span>
            <span>Tạo hồ sơ</span>
        </a>
        <a href="/PremiumPayments" class="quick-action-btn">
            <span class="quick-action-icon">💳</span>
            <span>Xử lý thanh toán</span>
        </a>
        <a href="/Claims" class="quick-action-btn">
            <span class="quick-action-icon">💰</span>
            <span>Xem bồi thường</span>
        </a>
    </div>
</div>

<!-- Activity Feed -->
<div class="content-card activity-feed">
    <div class="content-card-header">
        <h2 class="content-card-title">🔔 Hoạt động gần đây</h2>
        <a href="/PolicyApplications" style="color: #E31E24; text-decoration: none; font-weight: 600; font-size: 14px;">Xem tất cả →</a>
    </div>

    @if (Model.RecentApplications != null && Model.RecentApplications.Any())
    {
        @foreach (var app in Model.RecentApplications.Take(5))
        {
            <div class="activity-item">
                <div class="activity-icon @(app.Status == "issued" ? "completed" : app.Status == "under_review" ? "pending" : "new")">
                    @(app.Status == "issued" ? "✅" : app.Status == "under_review" ? "📋" : "📝")
                </div>
                <div class="activity-details">
                    <div class="activity-title">
                        @(app.Status == "issued" ? "Hợp đồng đã phát hành" : 
                          app.Status == "approved" ? "Hồ sơ đã duyệt" :
                          app.Status == "under_review" ? "Hồ sơ đang thẩm định" : "Hồ sơ mới")
                    </div>
                    <div class="activity-desc">@app.CustomerId - @app.ProductCode</div>
                    <div class="activity-time">
                        @{
                            var timeAgo = DateTime.Now - app.SubmittedAt;
                            if (timeAgo.TotalMinutes < 60)
                            {
                                @($"{(int)timeAgo.TotalMinutes} phút trước")
                            }
                            else if (timeAgo.TotalHours < 24)
                            {
                                @($"{(int)timeAgo.TotalHours} giờ trước")
                            }
                            else
                            {
                                @($"{(int)timeAgo.TotalDays} ngày trước")
                            }
                        }
                    </div>
                </div>
                <div class="activity-amount">@app.SumAssured.ToString("N0") VNĐ</div>
            </div>
        }
    }
    else
    {
        <div class="activity-item">
            <div class="activity-details">
                <div class="activity-desc">Chưa có hoạt động nào</div>
            </div>
        </div>
    }
</div>

<!-- Recent Payments Table -->
<div class="content-card">
    <div class="content-card-header">
        <h2 class="content-card-title">💳 Thanh toán gần đây</h2>
        <a href="/PremiumPayments" style="color: #E31E24; text-decoration: none; font-weight: 600; font-size: 14px;">Xem tất cả →</a>
    </div>
    <table class="data-table">
        <thead>
            <tr>
                <th>Mã thanh toán</th>
                <th>Hợp đồng</th>
                <th>Loại</th>
                <th>Số tiền</th>
                <th>Ngày thanh toán</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RecentPayments != null && Model.RecentPayments.Any())
            {
                @foreach (var payment in Model.RecentPayments)
                {
                    <tr>
                        <td><strong>@payment.Reference</strong></td>
                        <td>@payment.PolicyNo</td>
                        <td>@(payment.PaymentType == "initial" ? "Phí khởi tạo" : "Phí định kỳ")</td>
                        <td>@payment.Amount.ToString("N0") VNĐ</td>
                        <td>@(payment.PaidDate?.ToString("dd/MM/yyyy HH:mm") ?? "N/A")</td>
                        <td><span class="status-badge @payment.Status">@(payment.Status == "paid" ? "Đã thanh toán" : payment.Status)</span></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" style="text-align: center; color: #999;">Chưa có dữ liệu thanh toán</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Recent Policies Table -->
<div class="content-card">
    <div class="content-card-header">
        <h2 class="content-card-title">📄 Hợp đồng gần đây</h2>
        <a href="/Policies" style="color: #E31E24; text-decoration: none; font-weight: 600; font-size: 14px;">Xem tất cả →</a>
    </div>
    <table class="data-table">
        <thead>
            <tr>
                <th>Số hợp đồng</th>
                <th>Khách hàng</th>
                <th>Sản phẩm</th>
                <th>Số tiền bảo hiểm</th>
                <th>Ngày hiệu lực</th>
                <th>Trạng thái</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.RecentPolicies != null && Model.RecentPolicies.Any())
            {
                @foreach (var policy in Model.RecentPolicies.Take(6))
                {
                    <tr>
                        <td><strong>@policy.PolicyNo</strong></td>
                        <td>@policy.CustomerId</td>
                        <td>@policy.ProductCode</td>
                        <td>@policy.SumAssured.ToString("N0") VNĐ</td>
                        <td>@policy.EffectiveDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <span class="status-badge @policy.Status">
                                @(policy.Status == "inforce" ? "Hiệu lực" :
                                  policy.Status == "grace" ? "Ân hạn" :
                                  policy.Status == "expired" ? "Hết hạn" :
                                  policy.Status == "terminated" ? "Chấm dứt" : policy.Status)
                            </span>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" style="text-align: center; color: #999;">Chưa có dữ liệu hợp đồng</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Claims Section -->
@if (Model.PendingClaims != null && Model.PendingClaims.Any())
{
    <div class="content-card">
        <div class="content-card-header">
            <h2 class="content-card-title">💰 Yêu cầu bồi thường chờ xử lý</h2>
            <a href="/Claims" style="color: #E31E24; text-decoration: none; font-weight: 600; font-size: 14px;">Xem tất cả →</a>
        </div>
        <table class="data-table">
            <thead>
                <tr>
                    <th>Mã yêu cầu</th>
                    <th>Hợp đồng</th>
                    <th>Loại yêu cầu</th>
                    <th>Số tiền yêu cầu</th>
                    <th>Ngày nộp</th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model.PendingClaims)
                {
                    <tr>
                        <td><strong>@claim.ClaimNo</strong></td>
                        <td>@claim.PolicyNo</td>
                        <td>@claim.ClaimType</td>
                        <td>@claim.Payout.RequestedAmount.ToString("N0") VNĐ</td>
                        <td>@claim.SubmittedAt.ToString("dd/MM/yyyy")</td>
                        <td><span class="status-badge @claim.Status">@(claim.Status == "submitted" ? "Chờ xử lý" : claim.Status)</span></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<!-- Charts Section -->
<div class="stats-grid">
    <div class="content-card">
        <div class="content-card-header">
            <h2 class="content-card-title">📈 Thống kê thanh toán</h2>
        </div>
        <div class="chart-container payment-chart">
            <div class="chart-content">
                <div class="chart-icon">💳</div>
                <div class="chart-label">Tổng thanh toán</div>
                <div class="chart-main-value">@Model.TotalPaymentsToday.ToString("N0") ₫</div>
                <div class="chart-sub-info">
                    <span style="font-weight: 600;">@Model.RecentPayments.Count</span> giao dịch thành công
                </div>
            </div>
        </div>
    </div>

    <div class="content-card">
        <div class="content-card-header">
            <h2 class="content-card-title">📊 Tình trạng hồ sơ</h2>
        </div>
        <div class="chart-container application-chart">
            <div class="chart-content">
                <div class="chart-icon">📋</div>
                <div class="chart-label">Hồ sơ đang xử lý</div>
                <div class="chart-main-value">@Model.PendingApplications</div>
                <div class="chart-sub-info">
                    Cần thẩm định <span style="font-weight: 600;">ngay</span>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    // Display current date
    document.addEventListener('DOMContentLoaded', function() {
        const dateElement = document.getElementById('currentDate');
        const now = new Date();
        const options = {
            weekday: 'long',
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        };
        dateElement.textContent = now.toLocaleDateString('vi-VN', options);
    });
</script>