    }

    .with-you-subtitle {
        font-size: 24px;
        color: #E31E24;
    }

    .with-you-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 32px;
    }

    .with-you-card {
        background: #fff;
        border-radius: 12px;
