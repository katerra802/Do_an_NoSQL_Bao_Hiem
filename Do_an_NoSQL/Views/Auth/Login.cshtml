@{
    Layout = null;
    ViewData["Title"] = "Đăng nhập";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #f5f6fa, #e4ebf5);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-container {
            width: 100%;
            max-width: 420px;
            padding: 20px;
        }

        .login-card {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .login-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 10px 32px rgba(0, 0, 0, 0.15);
            }

        /* Header gọn */
        .login-header {
            background: #c62828;
            color: white;
            text-align: center;
            padding: 20px;
            border-bottom: 3px solid #b71c1c;
        }

            .login-header i {
                font-size: 38px;
                margin-bottom: 8px;
            }

            .login-header h2 {
                font-weight: 700;
                font-size: 22px;
                margin: 0;
            }

            .login-header p {
                margin: 5px 0 0;
                font-size: 13px;
                opacity: 0.85;
            }

        .login-body {
            padding: 30px 25px;
        }

        .form-floating {
            margin-bottom: 20px;
        }

        .form-control {
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            height: 50px;
            transition: all 0.3s ease;
            font-size: 15px;
        }

            .form-control:focus {
                border-color: #c62828;
                box-shadow: 0 0 0 0.15rem rgba(198, 40, 40, 0.2);
            }

        .btn-login {
            width: 100%;
            background: linear-gradient(135deg, #c62828, #e53935);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            padding: 13px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .btn-login:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 18px rgba(227, 30, 36, 0.3);
            }

        .alert {
            border-radius: 10px;
            border: none;
            padding: 12px;
            font-size: 14px;
            margin-bottom: 15px;
        }

        .login-footer {
            text-align: center;
            padding: 15px;
            color: #777;
            font-size: 13px;
            background: #fafafa;
            border-top: 1px solid #eee;
        }

            .login-footer a {
                color: #c62828;
                text-decoration: none;
                font-weight: 600;
            }

                .login-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>

<body>
    <div class="login-container">
        <div class="login-card">
            <!-- Header -->
            <div class="login-header">
                <i class="fa-solid fa-shield-halved"></i>
                <h2>Đăng nhập</h2>
                <p>Hệ thống Quản lý Bảo hiểm</p>
            </div>

            <!-- Body -->
            <div class="login-body">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger">
                        <i class="fa-solid fa-circle-exclamation me-2"></i>
                        @TempData["ErrorMessage"]
                    </div>
                }

                <form method="post" asp-action="Login" asp-controller="Auth">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="returnUrl" value="@ViewBag.ReturnUrl" />

                    <div class="form-floating">
                        <input type="text" class="form-control" id="username" name="username"
                               placeholder="Tên đăng nhập" required autofocus>
                        <label for="username"><i class="fa-solid fa-user me-2"></i>Tên đăng nhập</label>
                    </div>

                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="password"
                               placeholder="Mật khẩu" required>
                        <label for="password"><i class="fa-solid fa-lock me-2"></i>Mật khẩu</label>
                    </div>

                    <button type="submit" class="btn btn-login">
                        <i class="fa-solid fa-right-to-bracket me-2"></i>Đăng nhập
                    </button>
                </form>
            </div>

            <!-- Footer -->
            <div class="login-footer">
                © 2025 <strong>Insurance Management</strong><br>
                <a href="#">Chính sách</a> · <a href="#">Liên hệ</a>
            </div>
        </div>
    </div>
</body>
</html>
